.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw;
  justify-content: space-between;
  background-size: cover;
}
.container .tooltipsArea {
  height: 60rpx;
  padding: 0 5%;
}
.container .tooltipsArea > .reset {
  font-size: 32rpx;
  font-weight: bold;
}
.container .guessArea {
  flex: 4;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding: 0 5%;
}
.container .guessArea .guessContainer {
  width: 100%;
  height: 160rpx;
  border: 1px solid #666;
  border-radius: 22rpx;
  margin-bottom: 10%;
  display: flex;
  position: relative;
  z-index: 9;
}
.container .guessArea .guessContainer .outputWrap {
  border-top-left-radius: 22rpx;
  border-bottom-left-radius: 22rpx;
  flex: 5;
  background: #f9f5e9;
  border-bottom: 1px solid #666;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.container .guessArea .guessContainer .outputWrap .output {
  width: 17%;
  height: 60%;
  border: 1px solid #666;
  border-radius: 16rpx;
  background: #fff;
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container .guessArea .guessContainer .outputWrap .output.select > .cursor {
  background: rgba(138, 178, 238, 0.5);
  animation: blink 2s infinite ease;
  animation-fill-mode: both;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}
.container .guessArea .guessContainer .dealWrap {
  border-top-right-radius: 22rpx;
  border-bottom-right-radius: 22rpx;
  flex: 2;
  background: #e2ae5b;
  border-left: 1px solid #666;
  border-bottom: 1px solid #666;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.container .guessArea .guessContainer .dealWrap > span {
  display: block;
  width: 90%;
  height: 38rpx;
  border-radius: 38rpx;
  font-size: 30rpx;
  background: #c98f5b;
  color: #fff;
  text-align: center;
  margin-top: 10%;
}
.container .guessArea .guessContainer .dealWrap > .btn {
  width: 70%;
  height: 60rpx;
  border: 1px solid #666;
  border-radius: 18rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 36rpx;
  letter-spacing: 8rpx;
  margin-bottom: 10%;
  background: #fde56d;
  position: relative;
  z-index: 9;
  box-shadow: inset 4rpx 3rpx 16rpx #fff;
}
.container .guessArea .guessContainer::before {
  content: '';
  position: absolute;
  width: 71%;
  left: 0;
  bottom: -14rpx;
  height: 38rpx;
  background: #d3c4a3;
  border-bottom: 1px solid #666;
  border-left: 1px solid #666;
  border-bottom-left-radius: 38rpx;
  z-index: -1;
}
.container .guessArea .guessContainer::after {
  content: '';
  position: absolute;
  width: 29%;
  right: 0;
  bottom: -14rpx;
  height: 38rpx;
  background: #c88f59;
  border-bottom: 1px solid #666;
  border-left: 1px solid #666;
  border-right: 1px solid #666;
  border-bottom-right-radius: 30rpx;
  z-index: -1;
}
.container .resultsArea {
  flex: 5;
  padding: 0 5%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.container .inputArea {
  flex: 3;
  padding: 0 5%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .inputArea .inputNunber {
  width: 120rpx;
  height: 80rpx;
  margin: 0 2rpx;
  border: 1px solid #666;
  border-radius: 22rpx;
  background: #fff;
  line-height: 80rpx;
  text-align: center;
}
@keyframes blink {
  0% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}
